{{!< default}}
<header class="blog-header {{#if @site.cover_image}} has-cover{{/if}}">
	<div class="inner">
		<div class="box blog-box">
			<h1 class="blog-name">{{@site.title}}</h1>
			{{#if @site.description}}
			<span class="blog-description">{{@site.description}}</span>
			{{/if}}
		</div>
		{{#if @site.cover_image}}
		<div class="blog-cover cover">
			<img
			srcset="https://api.hyh.ink/fy4a/320w_FY4A_DISK.JPG 320w,
              https://api.hyh.ink/fy4a/640w_FY4A_DISK.JPG 640w,
              https://api.hyh.ink/fy4a/960w_FY4A_DISK.JPG 960w,
              https://api.hyh.ink/fy4a/1920w_FY4A_DISK.JPG 1920w"
      src="https://api.hyh.ink/fy4a/FY4A_DISK.JPG"
			alt="{{@site.title}}" />
		</div>
		{{/if}}
	</div>
</header>

<div id="index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
